{
  "name": "ds-ts-library",
  "version": "1.0.0",
  "description": "A Data Structure and Algorithms library",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lcnogueira/ds-ts-library.git"
  },
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only",
    "tsc": "tsc",
    "tsc:watch": "tsc --watch",
    "lint:fix": "eslint '*/**/*.{js,ts}' --fix",
    "lint:travis": "eslint '*/**/*.{js,ts}' --max-warnings 0",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "coveralls": "npm run test:coverage && cat ./coverage/lcov.info | coveralls"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --max-warnings 0"
    ]
  },
  "bugs": {
    "url": "https://github.com/lcnogueira/ds-ts-library/issues"
  },
  "homepage": "https://github.com/lcnogueira/ds-ts-library",
  "keywords": [
    "structure",
    "algorithm",
    "typescript"
  ],
  "author": "Luiz Cl√°udio <luizcns18@gmail.com> (https://lcnogueira.com/)",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node-dev": "^1.0.0-pre.56",
    "typescript": "^3.9.5"
  }
}